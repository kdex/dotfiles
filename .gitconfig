[alias]
	cp = cherry-pick
	fix = !git add -u && git commit --amend --no-edit && git push --force-with-lease
	lg = log --graph --decorate --abbrev-commit --date=relative
	ref = reflog --date=relative
	uncommit = reset --soft HEAD^
[blame]
	coloring = highlightRecent
[branch]
	autoSetupMerge = always
	autoSetupRebase = always
	mergeOptions = --ff-only
[commit]
	gpgsign = true
[core]
	editor = nano
[diff]
	submodule = log
[difftool]
	prompt = false
[gpg]
	program = gpg2
[grep]
	extendedRegexp = true
[init]
	templateDir = /home/kdex/.git-template
[merge]
	ff = only
	verifySignatures = true
[mergetool]
	keepBackup = false
	keepTemporaries = false
	prompt = false
	writeToTemp = true
[pull]
	rebase = preserve
[push]
	default = simple
	followTags = true
[pager]
	diff = diff-so-fancy | less -RFX
	show = diff-so-fancy | less -RFX
[status]
	submoduleSummary = true
[tag]
	forceSignAnnotated = true
	sort = version:refname
[user]
	email = kdex@kdex.de
	name = kdex